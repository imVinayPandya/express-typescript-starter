{
  "compilerOptions": {
    "outDir": "./built",
    "target": "es2019",                                  
    "module": "commonjs",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "allowJs": true,
    "lib": ["es2017", "dom"],
    "typeRoots": ["./node_modules/@types", "./src/typings"],
    "baseUrl": "."
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}
